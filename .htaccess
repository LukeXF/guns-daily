RewriteEngine On
Options -Indexes
ErrorDocument 403 http://dev.gunsdaily.net/404
ErrorDocument 404 http://dev.gunsdaily.net/404

RewriteEngine On
RewriteBase /

RewriteRule ^ban/([^/]+)/([^/]+)/([^/]+)$ ban.php?username=$1&time=$2&format=$3
RewriteRule ^ban/([^/]+)/([^/]+)$ ban.php?username=$1&time=$2
RewriteRule ^ban/([^/]+)$ ban.php?username=$1&time=$2&format=$3

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/$1\.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# sets the true header of a web page
<FilesMatch "\.(?i:xml)$">
      ForceType application/octet-stream
      Header set Content-Disposition attachment
</FilesMatch>

# blocks the assets directory from been effected by rewrite
RewriteRule ^assets/ - [L,NC]

# Tells css that it's actually css
AddType text/css .css 

# Load the images in cache to avoid long page loading
<Files "/assets/img/1.jpg">
  ExpiresActive On
  ExpiresDefault A60
</Files>
<Files "/assets/img/2.jpg">
  ExpiresActive On
  ExpiresDefault A60
</Files>
<Files "/assets/img/3.jpg">
  ExpiresActive On
  ExpiresDefault A60
</Files>
<Files "/assets/img/4.jpg">
  ExpiresActive On
  ExpiresDefault A60
</Files>